    <TextView
        android:id="@+id/sourceuri"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />

    <ImageView android:src="@drawable/step3"
        android:id="@+id/imageView1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:adjustViewBounds="true" />

    <TextView
        android:id="@+id/texthuemin"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Hue Min" />
    <SeekBar
        android:id="@+id/huebarmin"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:max="511"
        android:progress="511"/>
    <TextView
        android:id="@+id/texthuemax"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Hue Max" />
    <SeekBar
        android:id="@+id/huebarmax"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:max="511"
        android:progress="511"/>


    <TextView
        android:id="@+id/textsatmin"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Saturation min" />
    <SeekBar
        android:id="@+id/satbarmin"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:max="511"
        android:progress="0"/>
    <TextView
        android:id="@+id/textsatmax"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Saturation max" />
    <SeekBar
        android:id="@+id/satbarmax"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:max="511"
        android:progress="511"/>



    <TextView
        android:id="@+id/textvalmin"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Value min" />
    <SeekBar
        android:id="@+id/valbarmin"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:max="511"
        android:progress="0"/>
    <TextView
        android:id="@+id/textvalmax"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Value max" />
    <SeekBar
        android:id="@+id/valbarmax"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:max="511"
        android:progress="511"/>

    <Button
        android:id="@+id/resethsv"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Reset HSV" />
</LinearLayout>



